{% extends "index.twig" %}

{% block content %}
    {% if page.title %}
        <div class="page-header">
            <h1>{{ page.title }}</h1>
        </div>
    {% endif %}

    {# Note that using RAW output format here should be safe since the text is the result of a request to GitHub's markdown parser #}
    {{ page.text|raw }}
{% endblock %}
